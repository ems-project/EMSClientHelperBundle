{
	"name" : "elasticms/client-helper-bundle",
	"description" : "An elasticms extension for client helper functions (Graphical frontend, API, ... )",
	"type" : "symfony-bundle",
	"keywords" : [
		"elasticms"
	],
	"license" : "MIT",
	"authors" : [
		{
			"name" : "Isabelle Michiels",
			"email" : "isabelle.michiels@smals.be"
		},
		{
			"name" : "David Mattei",
			"email" : "david.mattei@smals.be"
		},
		{
			"name" : "David Meert",
			"email" : "david.meert@smals.be"
		}
	],
	"require" : {
		"php": "^7.2",
		"elasticms/common-bundle": "^1.7",
		"composer/ca-bundle": "^1.2",
		"symfony/framework-bundle" : "^4.3",
		"symfony-cmf/routing": "^2.1",
		"twig/twig" : "^2.11",
		"symfony/property-access": "^4.3",
		"symfony/options-resolver": "^4.3",
		"symfony/translation": "^4.3",
		"symfony/config": "^4.3"
	},
	"require-dev" : {
		"phpunit/phpunit" : "^5.7",
		"mockery/mockery" : "^0.9",
		"symfony/phpunit-bridge": "^4.3",
		"squizlabs/php_codesniffer": "^3.4",
		"phpstan/phpstan": "^0.11"
	},
	"autoload" : {
		"psr-4" : {
			"EMS\\ClientHelperBundle\\" : ""
		},
		"exclude-from-classmap" : [
			"tests/"
		]
	},
	"autoload-dev" : {
		"psr-4" : {
			"EMS\\ClientHelperBundle\\Tests\\" : "tests/"
		}
	},
	"extra" : {
		"branch-alias" : {
			"dev-master" : "0.1-dev"
		}
	},
	"scripts": {
		"phpcs": "phpcs --standard=phpcs.xml.dist --extensions=php,lib,inc",
		"phpcbf": "phpcbf --standard=phpcs.xml.dist --extensions=php,lib,inc",
		"phpstan": "phpstan analyse ."
	}
}
