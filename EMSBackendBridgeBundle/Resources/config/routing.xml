<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services
        http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <defaults public="false" />

        <service id="emsch.routing.router" class="EMS\ClientHelperBundle\EMSBackendBridgeBundle\Helper\Routing\Router" public="true">
            <argument/>
            <argument type="service" id="router"/>
            <argument type="service" id="templating"/>
            <tag name="controller.service_arguments" />
        </service>
        <service id="emsch.routing.loader" class="EMS\ClientHelperBundle\EMSBackendBridgeBundle\Helper\Routing\Route\Loader">
            <argument type="string">%kernel.project_dir%</argument>
            <tag name="routing.loader" />
        </service>

    </services>
</container>