<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services
        http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <defaults public="false" />

        <service id="emsch.file_manager" class="EMS\ClientHelperBundle\Helper\File\FileManager">
            <argument/>
            <argument type="service" id="EMS\ClientHelperBundle\Storage\StorageService" />
            <call method="setConfig">
                <argument>%emsch.file_manager.config%</argument>
            </call>
        </service>
        <service id="emsch.controller.file" class="EMS\ClientHelperBundle\Controller\FileController" public="true">
            <argument type="service" id="emsch.file_manager" />
        </service>
    </services>
</container>